{
  "name": "nmb-electron",
  "version": "1.0.0",
  "description": "NMB Electron Interface",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder build -c.extraMetadata.main=build/electron.js",
    "build:win": "npm run build && electron-builder build --win -c.extraMetadata.main=build/electron.js",
    "build:linux": "npm run build && electron-builder build --linux -c.extraMetadata.main=build/electron.js",
    "build:all": "npm run build && electron-builder build -wl -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "com.nmb.app",
    "productName": "NMB-Electron",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": ".",
        "filter": [
          "preload.js"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.13.0",
    "axios": "^1.4.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "recharts": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0",
    "react-app-rewired": "^2.2.1"

  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}